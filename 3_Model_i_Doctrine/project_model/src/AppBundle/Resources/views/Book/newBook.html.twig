{% extends "::base.html.twig" %}

{% block body %}

    <h1>Dodaj książkę</h1>

    <form method="post" action="{{ path('createBook') }}">
        <h3>Dodaj książkę</h3>
        <label>Tytuł
            <br>
            <input type="text" name="bookTitle" required>
        </label>
        <br>
        <label>Autor
            <br>
            <select name="authorId">
                <option selected disabled hidden> Wybierz autora </option>
                {% for author  in authors %}
                    <option value="{{ author.id }}">{{ author.fullName }}</option>
                {% endfor %}
            </select>
        </label>
        <br>
        <label>Opis
            <br>
            <textarea name="bookDescription" required></textarea>
        </label>
        <br>
        <label>Ocena
            <br>
            <input name="bookRating" type="number" max="10" min="0" step="0.1">
        </label>
        <br>
        <br>
        <input type="submit" value="Utwórz książkę">
    </form>

{% endblock %}